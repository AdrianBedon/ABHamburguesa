<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ABHamburguesa_v2.ABModels"
             x:Class="ABHamburguesa_v2.ABViews.BurguerItemPage"
             Title="BurguerItemPage">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="10"
                             VerticalOptions="StartAndExpand">
            <Label Text="Nombre"/>
            <Entry x:Name="ABNameB" Text="{Binding Name}"/>

            <Label Text="Descripción"/>
            <Entry x:Name="ABDescB" Text="{Binding Description}"/>

            <Label Text="¿Con queso extra?"/>
            <CheckBox x:Name="ABCheck"
                      IsChecked="{Binding WithExtraCheese}"
                      CheckedChanged="ABCheck_CheckedChanged"/>

            <Button x:Name ="SaveButton"
                    Text ="Guardar"
                    Clicked="OnSavedClicked"/>

            <Button Text="Cancelar"
                    Clicked="OnCancelClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>